<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sensors_Client.MainPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Welcome to Xamarin.Forms!"
              VerticalOptions="CenterAndExpand"
              HorizontalOptions="CenterAndExpand" />
                <Button Text="Accelerometer"
                        Clicked="OnAccelerometerClicked"/>
                <Button Text="Barometer"
                        Clicked="OnBarometerClicked"/>
                <Button Text="Compass"
                        Clicked="OnCompassClicked"/>
                <Button Text="Geolocation"
                        Clicked="OnGeolocationClicked"/>
                <Button Text="Gyroscope"
                        Clicked="OnGyroscopeClicked"/>
                <Button Text="Magnetometer"
                        Clicked="OnMagnetometerClicked"/>
                <Button Text="Orientation Sensor"
                        Clicked="OnOrientationSensorClicked"/>
                <Button Text="Save via REST"
                        Command="{Binding SaveSensorDataCommand}"/>
                <Label Text="{Binding REST}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>